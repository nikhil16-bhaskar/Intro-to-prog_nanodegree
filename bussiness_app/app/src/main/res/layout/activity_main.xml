<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pencils"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEE ENN ENTERPRISE"
            android:id="@+id/company_name"
            android:layout_margin="8dp"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/name"
            android:layout_below="@id/company_name"
            android:layout_marginTop="50dp"
            android:text="Name-Mr.Nikhil Bhaskar"
            android:textColor="#ffff00"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/address"
            android:layout_below="@id/name"
            android:layout_marginTop="10dp"
            android:text="Address-S.C.O 11,sector-30B,Chandigarh"
            android:textColor="#ffff00"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/phone"
            android:layout_below="@id/address"
            android:layout_marginTop="10dp"
            android:autoLink="phone"
            android:text="Phone no.-(+91)9780418681"
            android:textColor="#ffff00"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/description"
            android:layout_below="@id/phone"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Description- A company that supplies premium quality stationary at affordable rates."
            android:textColor="#ffff00"
            android:textSize="30sp"
            android:textStyle="italic" />

    </RelativeLayout>
</ScrollView>